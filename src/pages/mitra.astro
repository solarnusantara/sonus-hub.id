---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { Image } from 'astro:assets';

import img1 from '../assets/mitra/mitra-1.jpg';
import img2 from '../assets/mitra/mitra-2.jpg';
import img3 from '../assets/mitra/mitra-3.jpg';
import img4 from '../assets/mitra/mitra-4.jpg';
import img5 from '../assets/mitra/mitra-5.jpg';

const features = [
  {
    number: "01",
    title: "Produk Berkualitas",
    description: "Kami menyediakan berbagai material kelistrikan dan panel surya yang bersertifikasi dan memenuhi standar industri.",
    image: img1,
    imageAlt: "Pekerja memeriksa panel surya di atap gedung."
  },
  {
    number: "02",
    title: "Harga Kompetitif",
    description: "Dapatkan penawaran harga terbaik yang kompetitif di pasaran.",
    image: img2,
    imageAlt: "Dua orang berjabat tangan di depan tumpukan kotak."
  },
  {
    number: "03",
    title: "Distribusi Terpercaya",
    description: "Dengan jaringan distribusi yang luas, kami menjamin pengiriman tepat waktu ke seluruh wilayah Indonesia.",
    image: img3,
    imageAlt: "Truk kontainer di jalan raya."
  },
  {
    number: "04",
    title: "Layanan Purna Jual Terjamin",
    description: "Kami menawarkan jaminan layanan purna jual untuk memastikan Anda mendapatkan dukungan setelah pembelian.",
    image: img4,
    imageAlt: "Seorang teknisi tersenyum sambil memegang tablet."
  },
  {
    number: "05",
    title: "Kemudahan Transaksi",
    description: "Proses transaksi yang mudah dan bisa disesuaikan dengan kebutuhan perusahaan Anda.",
    image: img5,
    imageAlt: "Seseorang melakukan pembayaran menggunakan kartu kredit di laptop."
  }
];
---

<Layout 
  title="Kemitraan SonusHUB | Jadi Mitra Resmi Pengadaan Material"
  description="Gabung sebagai mitra resmi SonusHUB. Kami menyediakan berbagai material kelistrikan berkualitas tinggi dengan harga kompetitif dan jangkauan distribusi luas ke seluruh Indonesia."
>
  <Navbar class="bg-white shadow-md sticky top-0 z-30" linkClass="text-gray-700" />

  <!-- Hero Section -->
  <section class="bg-gray-100 py-20 md:py-28 text-center">
    <div class="container">
      <p class="text-base font-semibold text-[#014AAD] uppercase tracking-wider mb-2">Mitra SonusHUB</p>
      <h1 class="font-heading text-4xl md:text-6xl uppercase text-gray-800 tracking-wide">
        Jadikan Kami Sebagai Mitra Resmi Pengadaan Material
      </h1>
    </div>
  </section>

  <!-- Features Sections -->
  <main class="py-20 sm:py-32 bg-white">
    {features.map((feature, index) => (
      <section class:list={["py-12", { "bg-gray-50": index % 2 !== 0 }]}>
        <div class="container px-4 md:px-8 grid md:grid-cols-2 gap-12 lg:gap-16 items-center">
          
          <!-- Text Content -->
          <div class:list={["md:col-span-1", { "md:order-2": index % 2 !== 0 }]}>
            <p class="font-heading text-6xl text-gray-200 mb-2">{feature.number}</p>
            <h2 class="font-heading text-3xl md:text-4xl uppercase text-gray-800 mb-4 tracking-wide">
              {feature.title}
            </h2>
            <div class="w-16 h-1 bg-[#014AAD] mb-6"></div>
            <p class="text-lg text-gray-600 max-w-xl">
              {feature.description}
            </p>
          </div>

          <!-- Image Content -->
          <div class:list={["md:col-span-1 flex justify-center", { "md:order-1": index % 2 !== 0 }]}>
            <Image src={feature.image} alt={feature.imageAlt} class="rounded-lg shadow-lg w-full max-w-lg" />
          </div>

        </div>
      </section>
    ))}
  </main>
  
  <!-- CTA Section -->
  <section class="bg-gray-100">
    <div class="container py-20 sm:py-32 text-center">
        <h2 class="font-heading text-3xl md:text-4xl uppercase text-gray-800 mb-2 tracking-wide">
          Ajukan Kemitraan
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          Tertarik untuk menjadi mitra SonusHUB? Hubungi tim kami sekarang untuk mendapatkan informasi lebih lanjut.
        </p>
        <a 
          href="https://wa.me/+6282180000575" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="inline-flex items-center bg-[#014AAD] text-white font-bold py-3 px-8 rounded-lg text-lg uppercase tracking-wider hover:bg-blue-800 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 16 16">
            <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.93 7.93 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.89 7.89 0 0 0 13.6 2.326zM7.994 14.521a6.57 6.57 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.068-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.1-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
          </svg>
          Hubungi via WhatsApp
        </a>
    </div>
  </section>

</Layout>
