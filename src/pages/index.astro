---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Navbar from '../components/Navbar.astro';
import Stats from '../components/Stats.astro';
---

<Layout title="SonusHUB Profile">
	<div class="relative">
		<Navbar class="absolute top-0 left-0 w-full z-20 bg-transparent shadow-none" linkClass="text-white" />
		<Hero />
	</div>
	<Stats />
	<!-- Placeholder for other sections that would follow the stats -->
	<section class="min-h-screen bg-white p-8">
		<div class="container px-4 md:px-8">
			<h2 class="text-3xl font-bold mb-4">Konten Lainnya Disini</h2>
			<p>Ini adalah area untuk konten lain setelah Hero Section.</p>
			<!-- Here you would place other sections like "My Service", "My Work", etc. -->
		</div>
	</section>
</Layout>
