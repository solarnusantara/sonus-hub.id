<style>
  .typed-cursor {
    opacity: 1;
    animation: blink 0.7s infinite;
  }
  @keyframes blink {
    0% { opacity: 1; }
    50% { opacity: 0; }
    100% { opacity: 1; }
  }
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.5s ease-out forwards;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const typedTextSpan = document.getElementById('typed-text');
  if (!typedTextSpan) return;

  const textArray = ["Solusi material kelistrikan,", "energi terbarukan,", "& <em>smart manufacturing</em>"];
  const typingDelay = 50;
  const newTextDelay = 500; // Delay between lines
  let textArrayIndex = 0;
  let charIndex = 0;

  function type() {
    if (textArrayIndex >= textArray.length) {
      // End of all lines, stop cursor blinking
      const cursor = document.querySelector('.typed-cursor');
      if (cursor) {
          cursor.style.animation = 'none';
          cursor.style.opacity = '0';
      }
      return;
    }

    const currentLine = textArray[textArrayIndex];
    if (charIndex < currentLine.length) {
      const char = currentLine.charAt(charIndex);

      if (char === '<') {
        const closingTagIndex = currentLine.indexOf('>', charIndex);
        if (closingTagIndex !== -1) {
          // It's a tag, append the whole thing
          const tag = currentLine.substring(charIndex, closingTagIndex + 1);
          typedTextSpan.innerHTML += tag;
          charIndex = closingTagIndex + 1;
        } else {
          // Incomplete tag, just append char
          typedTextSpan.innerHTML += char;
          charIndex++;
        }
      } else {
        // It's a normal character
        typedTextSpan.innerHTML += char;
        charIndex++;
      }
      setTimeout(type, typingDelay);
    } else {
      // End of a line
      textArrayIndex++;
      charIndex = 0;
      if (textArrayIndex < textArray.length) {
        typedTextSpan.innerHTML += '<br>';
        setTimeout(type, newTextDelay);
      } else {
        // Recursive call to handle end condition
        type();
      }
    }
  }

  // Initial call to start typing
  if (textArray.length) {
    setTimeout(type, newTextDelay + 250);
  }
});
</script>