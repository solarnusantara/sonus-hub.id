      <!-- Right Columns: Links -->
      <div class="md:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-8">
        <div>
          <h3 class="font-bold text-lg text-white mb-4 uppercase tracking-wider">Dukungan</h3>
          <ul class="space-y-2">
            {supportLinks.map(link => (
              <li><a href={link.href} target="_blank" rel="noopener noreferrer" class="hover:text-[#014AAD] transition-colors">{link.text}</a></li>
