---
import { Image } from 'astro:assets';
import logoImage from '/public/favicon.svg'; // Path to your favicon SVG

const { class: navClass, linkClass } = Astro.props;

const navLinks = [
  { href: "/", text: "Beranda" },
  { href: "/mitra", text: "Mitra" },
  { href: "/suplier", text: "Suplier" },
  { href: "/artikel", text: "Artikel" },
  { href: "/hubungi-kami", text: "Hubungi Kami" },
];
---

<nav class:list={[navClass]}>
  <div class="container mx-auto max-w-max-desktop flex justify-between items-center py-2 px-4 md:px-8">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-2">
      <Image src={logoImage} alt="SonusHUB Logo" width={40} height={40} />
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center space-x-6">
      {navLinks.map(link => (
        <a href={link.href} class:list={[linkClass, "hover:text-blue-600 transition-colors"]}>{link.text}</a>
      ))}
      <a 
        href="https://sonushub.id" 
        target="_blank" 
        rel="noopener noreferrer"
        class="bg-[#014AAD] text-white font-semibold px-4 py-2 rounded-lg hover:opacity-90 transition-opacity"
      >
        E-commerce
      </a>
    </div>

    <!-- Mobile Menu Button (Hamburger) -->
    <div class="md:hidden">
      <button id="mobile-menu-button" class:list={[linkClass, "focus:outline-none"]}>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden mt-4">
    {navLinks.map(link => (
      <a href={link.href} class:list={[linkClass, "block py-2 px-4 text-sm hover:bg-gray-100"]}>{link.text}</a>
    ))}
    <a 
      href="https://sonushub.id" 
      target="_blank" 
      rel="noopener noreferrer"
      class="block bg-[#014AAD] text-white font-semibold px-4 py-2 mt-2 rounded-lg text-center"
    >
      E-commerce
    </a>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
